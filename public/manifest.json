{
  "name": "Arex Chrome extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "128": "logo-128.png"
  },
  "permissions": [
    "*://*/*",
    "http://*/*",
    "https://*/*",
    "http://127.0.0.1:8002/*",
    "http://127.0.0.1:6001/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Arex",
    "default_icon": "logo-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content-scripts.js"
      ]
    }
  ]
}
